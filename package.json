{
  "name": "albacorp-identity-service",
  "version": "1.0.0",
  "description": "Identity service for Alba Corp. It'll be used to manage authentication and authorisation on all Alba Corp's products and services.",
  "main": "dist/index.js",
  "scripts": {
    "test": "jest --detectOpenHandles --coverage",
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only index.ts",
    "lint": "eslint src/",
    "compile": "tsc",
    "fix": "eslint src/ --fix",
    "prettier": "prettier --check .",
    "format": "prettier --write '**/*.{js,ts,json,md}'",
    "prepare": "npm.cmd run compile",
    "pretest": "npm.cmd run compile",
    "posttest": "npm.cmd run lint",
    "migrate": "npx prisma migrate dev --name init"
  },
  "keywords": [
    "AlbaCorp",
    "Identity service",
    "Authentication"
  ],
  "author": "Alba Corp",
  "license": "ISC",
  "devDependencies": {
    "@eslint/js": "^9.6.0",
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/human-interval": "^1.0.2",
    "@types/jest": "^29.5.12",
    "@types/joi": "^17.2.3",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/kafkajs": "^1.9.0",
    "@types/moment": "^2.13.0",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.14.10",
    "@types/winston": "^2.4.4",
    "@typescript-eslint/eslint-plugin": "^7.15.0",
    "@typescript-eslint/parser": "^7.15.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "express-list-routes": "^1.2.2",
    "globals": "^15.8.0",
    "jest": "^29.7.0",
    "morgan": "^1.10.0",
    "prettier": "^3.3.2",
    "prisma": "^5.17.0",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.5.3",
    "typescript-eslint": "^7.15.0"
  },
  "dependencies": {
    "@prisma/client": "^5.16.1",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "google-auth-library": "^9.11.0",
    "human-interval": "^2.0.1",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "kafkajs": "^2.2.4",
    "moment": "^2.30.1",
    "slugify": "^1.6.6",
    "winston": "^3.13.1",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "engines": {
    "node": ">=8.3.0"
  }
}
